<body id="main_body">
    <select size = "1" name = "searchType">
        <option value = "scene">scene</option>
        <option value = "food">food</option>
    </select>
    <input type = "text" name = "pointname" id = "pointname"/>
    <input type = "button" name = "button" id = "button" onclick="submitText()" value = "提交"/>
    <br>
    <textarea rows = "25" cols = "100" type = "text" name = "trytext" id = "trytext"></textarea>
    </br>
    <input type = "button" name = "finish" id = "finish" onclick="finish()" value = "完成"/>
    <div id = "RESULT"></div>
